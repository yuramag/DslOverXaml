<Application x:Class="DslOverXamlDemo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DslOverXamlDemo"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Templates.xaml"/>
                <ResourceDictionary Source="Resources\Converters.xaml"/>
                <ResourceDictionary Source="Resources\Styles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/DslOverXamlDemo.Rules;component/Resources/Templates.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/DslOverXamlDemo.Rules;component/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
